@page "{id:int}"
@model ProjetosCelo.Pages.Amostras.EditModel
@{
    ViewData["Title"] = "Editar Amostra";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Amostra.Id" />
    <div>
        <label asp-for="Amostra.Nome"></label>
        <input asp-for="Amostra.Nome" />
        <span asp-validation-for="Amostra.Nome" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amostra.Descricao"></label>
        <textarea asp-for="Amostra.Descricao"></textarea>
        <span asp-validation-for="Amostra.Descricao" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amostra.ResponsavelNome"></label>
        <input asp-for="Amostra.ResponsavelNome" />
        <span asp-validation-for="Amostra.ResponsavelNome" class="text-danger"></span>
    </div>
    <div>
        <label for="observacao">Observação do Histórico:</label>
        <textarea id="observacao" name="observacao" required></textarea>
        <span class="text-danger">@Html.ValidationMessage("observacao")</span>
    </div>
    <button type="submit">Salvar</button>
</form>

<a asp-page="./Index">Voltar para a Lista</a>
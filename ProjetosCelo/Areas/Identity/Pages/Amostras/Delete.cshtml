@page "{id:int}"
@model ProjetosCelo.Pages.Amostras.DeleteModel
@{
    ViewData["Title"] = "Excluir Amostra";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Tem certeza de que deseja excluir esta amostra?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Amostra.Id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Amostra.Nome</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Amostra.Descricao</dd>

        <dt class="col-sm-2">Responsável</dt>
        <dd class="col-sm-10">@Model.Amostra.ResponsavelNome</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Amostra.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
@page
@model ProjetosCelo.Areas.Identity.Pages.Amostras.CreateModel
@{
    ViewData["Title"] = "Cadastrar Amostra";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label asp-for="Amostra.Nome"></label>
        <input asp-for="Amostra.Nome" />
        <span asp-validation-for="Amostra.Nome" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amostra.Descricao"></label>
        <textarea asp-for="Amostra.Descricao"></textarea>
        <span asp-validation-for="Amostra.Descricao" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amostra.ResponsavelNome"></label>
        <input asp-for="Amostra.ResponsavelNome" />
        <span asp-validation-for="Amostra.ResponsavelNome" class="text-danger"></span>
    </div>
    <div>
        <label for="historicoObservacao">Observação do Histórico:</label>
        <textarea id="historicoObservacao" name="historicoObservacao"></textarea>
        <span class="text-danger">@Html.ValidationMessage("historicoObservacao")</span>
    </div>
    <button type="submit">Cadastrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}